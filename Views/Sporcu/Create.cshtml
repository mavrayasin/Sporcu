@model Sporcu.Entity.TblSporcu

@{
    ViewData["Title"] = "Ekle";
}

<hr />
<div class="box box-info">
    <!-- Horizontal Form -->
    <div class="box-header with-border">
        <h3 class="box-title">@ViewData["Title"]</h3>
    </div><!-- /.box-header -->
    <div class="row">
        <div class="col-md-8">
            @using (Html.BeginForm("Create", "Sporcu", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.TcKimlikNo, htmlAttributes: new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.TcKimlikNo, new { @class = "form-control", placeholder = "TC Kimlik No giriniz", required = "required" })
                        @Html.ValidationMessageFor(model => model.TcKimlikNo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.AdSoyad, htmlAttributes: new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.AdSoyad, new { @class = "form-control", placeholder = "Ad Soyad giriniz", required = "required" })
                        @Html.ValidationMessageFor(model => model.AdSoyad, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.DogumTarihi, htmlAttributes: new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.DogumTarihi, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                        @Html.ValidationMessageFor(model => model.DogumTarihi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Cinsiyet, htmlAttributes: new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.Cinsiyet, new { @class = "form-control", placeholder = "Cinsiyet giriniz", required = "required" })
                        @Html.ValidationMessageFor(model => model.Cinsiyet, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.IlId, htmlAttributes: new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.IlId, new { @class = "form-control", placeholder = "İl ID giriniz", required = "required" })
                        @Html.ValidationMessageFor(model => model.IlId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.IlceId, htmlAttributes: new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.IlceId, new { @class = "form-control", placeholder = "İlçe ID giriniz", required = "required" })
                        @Html.ValidationMessageFor(model => model.IlceId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.LisansBaslangic, htmlAttributes: new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.LisansBaslangic, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                        @Html.ValidationMessageFor(model => model.LisansBaslangic, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.LisansBitis, htmlAttributes: new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.LisansBitis, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                        @Html.ValidationMessageFor(model => model.LisansBitis, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 control-label">
                        @Html.DisplayNameFor(model => model.AktifMi)
                    </div>
                    <div class="col-md-5">
                        <div class="form-check">
                            @Html.CheckBoxFor(model => model.AktifMi, new { @class = "form-check-input" })
                            @Html.ValidationMessageFor(model => model.AktifMi, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-offset-3 col-md-5">
                        <input type="submit" value="Ekle" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

